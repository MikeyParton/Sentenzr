<div id="sentence-data" data-structure=<%= @sentence.structure %> data-tense=<%= @sentence.tense %> data-tense-modifier= <%= @sentence.tense_modifier %>>
</div>

<%= link_to eval("structure_options_sentence_path(@sentence.id)"), class: "block structure editable #{is_editing?('structure')}", remote: true  do %>
	<%= fa_icon("cog") %>Structure
<% end %>
&nbsp;
<% @sentence.blocks.each do |block| %>
	<% if Sentence::EDITABLE.include?(block[:class]) %>
		<%= link_to eval("#{block[:class]}_options_sentence_path(@sentence.id)"), class: "block editable #{block[:class]} #{is_editing?(block[:class])}", remote: true  do %>
			<div class="block-header">
				<%= fa_icon("edit") %>
				<%= block[:class] %>
			</div>
			<%= block[:words] %>
		<% end %>		
	<% else %>
		<%= content_tag(:div, class: [block[:class], "block"]) do %>
			<div class="block-header">
				<%= block[:class] %>
			</div>
			<%= block[:words] %>
		<% end %>
	<% end %>
	&nbsp;
<% end %>