<div class="panel panel-default">
  <div class="panel-header">
    <%= fa_icon "circle" %>
    <h4><%= "#{@sentence.tense.capitalize} #{@sentence.tense_modifier}" %></h4>
    <%= fa_icon "circle"%>
  </div>
  <div class="panel-body">
    <div class="timeline">
	<div class="before-meter">
	<%= fa_icon "clock-o 3x" %>
	</div>
	<div class="meter-container">
		<div class="meter">
		  <div class="now">
			<%= fa_icon "map-marker 2x"%>
			<span class="marker-label">Now</span>
		  </div>
		  <div class="future">
			<%= fa_icon "map-marker 2x"%>
			<span class="marker-label">Future</span>
		  </div>
		  <span style="width: 5%; margin-left: 62.5%;"></span>
		</div>
	</div>
	</div>
	</div>
	<ul class="list-group">
		<li class="list-group-item">
			<h4 class="panel-title">Uses</h4>
		</li>
		<li class="list-group-item">
		An action predicted to be completed before some moment in the future.
			<ul class="uses">
			</ul>
		</li>
		<li class="list-group-item">
		<h4 class="panel-title">Examples</h4>
		</li>
		<li class="list-group-item">
		<ul class="eg-list">
			<li class="eg">
				<span>"When you get back from England, you will have learnt English."</span><br>
				<span class="eg-explanation">(You will learn english before you get back)</span>
			</li>
		</ul>
		</li>
	</ul>
</div>





